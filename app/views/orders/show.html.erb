<h1>"Order_id: "<%=  @order.id %></h1><br>
<div>
  <h3>Order Items</h3>
  <table border='1'>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Amount</th>
      <th>Order_id</th>
    </tr>

    <% @order_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.amount %></td>
        <td><%= item.order_id %></td>
      </tr>
    <% end %>
  </table>
  <div>
      <h6> "Total amount:" <%= @total_amount %></h6>
  </div>
</div>