<div>
  <h1><%= @table.table_number %> Details</h1>
  <p><strong>Status:</strong> <%= @table.table_status %></p>
  <p><strong>Guest Quantity:</strong> <%= @table.guest_quantity %></p>
</div>

<h3>Customer Details</h3>
<%= form_with url: table_create_order_path(@table), method: :post do |f| %>
  <div>
    <label>Name:</label>
    <%= f.text_field :customer_name, required: true %>
  </div>

  <div>
    <label>Contact:</label>
    <%= f.text_field :customer_contact, required: true %>
  </div>

  <h3>Menu Items</h3>
  <div>
    <table>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Status</th>
        <th>Quantity</th>
      </tr>
    <% @menu_items.each do |item| %>
      <tr>
        <td><label><%= item.name %></label></td>
        <td><label> â‚¹<%= item.price %></label></td>
        <td><label><%= item.category %></label></td>
        <td><label><%= item.availability_status %></label></td>
        <td><%= select_tag "order[items][#{item.id}]", options_for_select((0..20).to_a, 0) %></td>
      </tr>
    <% end %>
    </table>
  </div>
  
  <%= f.submit "Place Order" %>
<% end %>

<%= link_to "Back to Dashboard", dashboard_index_path, class: "btn btn-secondary" %>
