<div class="container mt-4">
  <h1 class="text-center primary-emphasis"><%= current_user.restaurant.name %> Dashboard</h1>

  <div class="card shadow mt-4">
    <div class="card-header bg-secondary text-white">
      <h3 class="mb-0">Tables</h3>
    </div>
    <div class="card-body">
      <div class="row">
        <% @tables.each do |table| %>
          <div class="col-md-3 mb-3">
            <div class="card text-center <%= table.table_status == 'occupied' ? 'bg-success text-white' : 'bg-danger text-white' %>">
              <div class="card-body">
                <%= link_to table.table_number, table_path(table), class: "text-decoration-none text-white fw-bold" %>
                <p class="card-text"><%= table.table_status.capitalize %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Menu Items Section -->
  <div class="card shadow mt-4">
    <div class="card-header bg-secondary text-white">
      <h3 class="mb-0">Menu Items</h3>
    </div>
    <div class="card-body">
      <table class="table table-striped">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Availability</th>
          </tr>
        </thead>
        <tbody>
          <% @menu_items.each do |menu_item| %>
            <tr>
              <td><%= menu_item.name %></td>
              <td>â‚¹<%= menu_item.price %></td>
              <td><%= menu_item.category %></td>
              <td>
                <span class="badge <%= menu_item.availability_status == 'available' ? 'bg-success' : 'bg-secondary' %>">
                  <%= menu_item.availability_status %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-between mt-4">
    <%= link_to "Orders", orders_path, class: "btn btn-primary fw-bold" %>

    <% if current_user %>
      <%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn btn-primary fw-bold" %>
    <% end %>
  </div>
</div>
