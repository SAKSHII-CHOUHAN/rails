<div class="container mt-5">
  <h1 class="display-4 text-center mb-4"><%= @restaurant.name %></h1>

  <div class="card shadow mx-auto" style="max-width: 600px;">
    <div class="card-header bg-dark text-white">
      <h3 class="mb-0 text-center">Leave Your Feedback</h3>
    </div>
    <div class="card-body p-4">
      <%= form_with(model: [@restaurant, @feedback], local: true, class: "feedback-form") do |form| %>
        <% if @feedback.errors.any? %>
          <div class="alert alert-danger">
            <h5 class="alert-heading">Oops! Please fix the following errors:</h5>
            <ul class="mb-0">
              <% @feedback.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, "Your Name", class: "form-label fw-bold" %>
          <%= form.text_field :name, class: "form-control", placeholder: "Enter your name", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :email, "Your Email", class: "form-label fw-bold" %>
          <%= form.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
        </div>

        <div class="mb-4">
          <%= form.label :comments, "Your Comments", class: "form-label fw-bold" %>
          <%= form.text_area :comments, class: "form-control", placeholder: "Write your feedback here", rows: 4, required: true %>
        </div>

        <div class="text-center">
          <%= form.submit "Submit Feedback", class: "btn btn-primary btn-lg w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
